# =====================================================
# üîê VARI√ÅVEIS DE AMBIENTE - KAINOW BACKEND
# =====================================================

# Copie este arquivo para .env e preencha os valores

# =====================================================
# SERVIDOR
# =====================================================
PORT=3000
NODE_ENV=development

# =====================================================
# BANCO DE DADOS
# =====================================================
# MongoDB Atlas (Recomendado para produ√ß√£o)
MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/kainow?retryWrites=true&w=majority

# MongoDB Local (Para desenvolvimento)
# MONGODB_URI=mongodb://localhost:27017/kainow

# =====================================================
# AUTENTICA√á√ÉO JWT
# =====================================================
# Gere uma chave secreta forte: openssl rand -base64 32
JWT_SECRET=sua_chave_secreta_muito_segura_aqui_mude_isso
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# BCRYPT
# =====================================================
BCRYPT_SALT_ROUNDS=10

# =====================================================
# CORS
# =====================================================
# URLs permitidas (separadas por v√≠rgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://seudominio.com

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# EMAIL (OPCIONAL - Para envio de emails)
# =====================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_de_app
EMAIL_FROM=noreply@kainow.com.br

# =====================================================
# SMS (OPCIONAL - Twilio)
# =====================================================
TWILIO_ACCOUNT_SID=seu_account_sid
TWILIO_AUTH_TOKEN=seu_auth_token
TWILIO_PHONE_NUMBER=+5511999999999

# =====================================================
# LOGS
# =====================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =====================================================
# OUTROS
# =====================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
